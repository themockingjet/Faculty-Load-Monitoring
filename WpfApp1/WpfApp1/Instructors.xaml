                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>

                                            <!-- END -->
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </TabItem>
                        <TabItem Header="Accounts &amp; Account Logs" Height="40" Width="550" HorizontalAlignment="Center">
                            <Border>
                                <Grid>

                                    <Grid Grid.Row="0">
                                        <DataGrid Name="dtAcc" CanUserResizeColumns="False" CanUserResizeRows="False" CanUserAddRows="False" ItemsSource="{Binding}" VirtualizingPanel.IsVirtualizing="False"
                                              CanUserDeleteRows="False" ColumnWidth="*" AutoGenerateColumns="False" AlternatingRowBackground="LightGray" AlternationCount="2" SelectionChanged="DtAcc_SelectionChanged"
